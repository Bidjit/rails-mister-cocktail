<div class="wrapper">
  <div class="container">
    <h1>Our Cocktails</h1>
    <div class="cocktails-container">
      <% @cocktails.each do |cocktail| %>
        <div>
          <i class="fas fa-glass-martini"></i>
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
        </div>
      <% end %>
    </div>
    <hr>
    <%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-primary" %>
  </div>
</div>
